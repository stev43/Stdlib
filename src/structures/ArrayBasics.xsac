/** <!--********************************************************************-->
 *
 * @fn  <a>[.] ravel( <a>[*] Array)
 *
 *   @brief  creates a vector with identical data vector to original array
 *
 ******************************************************************************/

#define RAVEL( sactyp, postfix, zval, oval, ctyp)  \
inline                                             \
sactyp[.] ravel( sactyp[*] A)		           \
{                                                  \
  return( _reshape_([xrhoshape(_shape_(A))], A));  \
}

