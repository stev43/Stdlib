/** <!--********************************************************************-->
 *
 * @fn  int dim( <a>[*] Array)
 *
 *   @brief  yields an array's dimensionality (rank).
 *
 ******************************************************************************/

#define DIM( sactyp, postfix, zval, oval, ctyp) \
inline                                          \
int dim( sactyp[*] array)                       \
{                                               \
  return( _dim_A_( array));                     \
}

