BUILT_IN( SEL_SxA)


/** <!--********************************************************************-->
 *
 * @fn  <a>[*] modarray( <a>[*] Array, int[.] idx, <a> val)
 * 
 *   @brief  modifies the element of Array at position idx, provided 
 *           shape( idx)[[0]] == dim( Array) holds.
 *
 ******************************************************************************/
#define GENARRAY( sactyp, postfix, zval, oval, ctyp) \
inline                                               \
sactyp[*] genarray( int[.] shp, sactyp[*] val)       \
{                                                    \
  res = with {                                       \
          ( . <= iv <= . ) : val;                    \
        } : genarray( shp, val );                    \
  return( res);                                      \
}

#define MODARRAY_AxVxS( sactyp, postfix, zval, oval, ctyp)  \
inline                                                      \
sactyp[*] modarray( sactyp[*] array, int[.] v, sactyp[] val)\
{                                                           \
  return( _modarray_AxVxS_( array, v, val));                \
}

#define MODARRAY_AxVxA( sactyp, postfix, zval, oval, ctyp)   \
inline                                                       \
sactyp[*] modarray( sactyp[*] array, int[.] v, sactyp[+] val)\
{                                                            \
  res = with {                                               \
          ( v <= iv <= v ) : val;                            \
        } : modarray( array );                               \
  return( res);                                              \
}

#define MODARRAY_AxSxX( sactyp, postfix, zval, oval, ctyp)  \
inline                                                      \
sactyp[*] modarray( sactyp[*] array, int v, sactyp[*] val)  \
{                                                           \
  return( modarray( array, [v], val));                      \
}



#define MODARRAY( sactyp, postfix, zval, oval, ctyp)  \
  MODARRAY_AxVxS( sactyp, postfix, zval, oval, ctyp)  \
  MODARRAY_AxSxX( sactyp, postfix, zval, oval, ctyp)  \
  MODARRAY_AxVxA( sactyp, postfix, zval, oval, ctyp)

BUILT_IN( GENARRAY)
BUILT_IN( MODARRAY)

/** <!--********************************************************************-->
 *
 * @fn  <a>[*] iota( int[.] shp)
 *
 *   @brief creates an array of `shp` and fills it with [0, maxindex (shp) )
 *          values.
 *
 ******************************************************************************/

inline
int[.] iota( int shp)
{
  res = with {
          ( . <= [i] <= . ) : i;
        } : genarray( [shp], 0 );
  return( res);
}

inline
int[*] iota( int[.] shp)
{
  res = with {
          ( . <= iv <= . ) : iv;
        } : genarray( shp, _mul_SxV_( 0, shp));
  return( res);
}

