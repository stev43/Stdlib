#define TOCHAR_S( sactyp, postfix, zval, oval, ctyp) \
inline char tochar( sactyp a                          \
{                                                     \
  return _toc_S_ (a);                                 \
}

#define TOCHAR_A( sactyp, postfix, zval, oval, ctyp) \
inline char[*] tochar( sactyp[+] a)                  \
{                                                    \
  res = with {                                       \
          ( . <= iv <= . ) : _toc_S_( a[iv] );       \
        } : genarray( shape(a), ' ' );               \
                                                     \
  return( res);                                      \
}

/**
 * These functions convert numerical values into a char (byte) value
 */
BUILT_IN( TOCHAR_S)
BUILT_IN( TOCHAR_A)
